<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/et_phonelogin_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="17dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_login_phone"
            android:drawablePadding="11dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/txtSettingVersion"
            android:textColorHint="@color/txtSettingVersion"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/iv_phoneloging_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/ic_login_clean"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@color/divColor"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            android:id="@+id/et_phonelogin_yzm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="54dp"
            android:layout_marginRight="120dp"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"

            android:textColor="@color/txtSettingVersion"
            android:textColorHint="@color/txtSettingVersion"
            android:textCursorDrawable="@null"
            android:textSize="15sp"/>

        <com.xi6666.view.CountdownButton
            android:id="@+id/btn_phonelogin_getyzm"
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:background="@drawable/bg_login_yanzhengma_enble"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:background="@color/divColor"
            />
    </RelativeLayout>
</LinearLayout>