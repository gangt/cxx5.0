<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/whiteTextColor"
    android:gravity="top|center"
    app:cardCornerRadius="3dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="match_parent">
        <!-- 分类商品图片 -->
        <ImageView
            android:id="@+id/type_details_iv"
            android:layout_width="158dp"
            android:layout_height="158dp" />


        <!-- 分类商品标题 -->
        <TextView
            android:id="@+id/type_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/type_details_iv"
            android:layout_below="@+id/type_details_iv"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_red"
            android:textSize="12sp" />

        <!-- 网购价 -->
        <TextView
            android:id="@+id/type_details_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/type_details_title"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/type_details_title"
            android:textSize="9sp" />

        <!-- 分类商品信息 -->
        <TextView
            android:id="@+id/type_details_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/type_details_iv"
            android:layout_alignRight="@+id/type_details_iv"
            android:layout_below="@+id/type_details_title"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="#757575"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>