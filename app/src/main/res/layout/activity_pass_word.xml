<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_pass_word"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divColor"
    android:orientation="vertical"
    tools:context="com.xi6666.password.view.PassWordAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="登录账户"
            android:textColor="@color/txtMineOrderTitle"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/txt_password_accoutname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:background="@null"
            android:hint=""
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_password_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="*保存后无法修改,仅限登录使用"
            android:textColor="@color/txtPhoneNum"
            android:textSize="12sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="设置密码"
            android:textColor="@color/txtMineOrderTitle"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txt_password_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"
            android:background="@null"
            android:hint="6-20位数字,字母组合"
            android:inputType="textPassword"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="确认密码"
            android:textColor="@color/txtMineOrderTitle"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/txt_password_setting_again"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="105dp"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:textSize="15sp"/>
    </RelativeLayout>
</LinearLayout>
