<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="331dp"
        android:layout_height="222dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/carWash_search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 图片 -->
            <ImageView
                android:id="@+id/carWash_search_banner_iv"
                android:layout_width="331dp"
                android:layout_height="152dp"
                android:scaleType="fitXY" />

            <!-- 标题 -->
            <TextView
                android:id="@+id/carWash_search_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/carWash_search_banner_iv"
                android:background="@mipmap/bg_carwash_search_title"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="深圳大浪汽车高端养护中心"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <!-- 时间 -->
            <TextView
                android:id="@+id/carWash_search_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_below="@+id/carWash_search_banner_iv"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="11dp"
                android:background="@mipmap/bg_store_time"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="07:00-23:00"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="11sp" />

            <!-- 定位 -->
            <TextView
                android:id="@+id/carWash_search_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/carWash_search_time_tv"
                android:layout_below="@+id/carWash_search_time_tv"
                android:layout_marginTop="7dp"
                android:drawableLeft="@mipmap/ic_location_gary"
                android:drawablePadding="3dp"
                android:text="6.3km"
                android:textColor="#929292"
                android:textSize="13sp" />

            <!-- 评分 -->
            <TextView
                android:id="@+id/carWash_search_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/carWash_search_banner_iv"
                android:layout_marginRight="8dp"
                android:layout_marginTop="7dp"
                android:text="4.9分"
                android:textColor="#ff7f00"
                android:textSize="15sp" />

            <!-- 地址 -->
            <TextView
                android:id="@+id/carWash_search_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/carWash_search_location_tv"
                android:layout_marginLeft="12dp"
                android:layout_toLeftOf="@+id/carWash_search_score_tv"
                android:layout_toRightOf="@+id/carWash_search_location_tv"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="深圳市南山区科苑路15号"
                android:textColor="#929292"
                android:textSize="13sp" />

        </RelativeLayout>


        <!-- 我去过 -->
        <ImageView
            android:id="@+id/carWash_search_me_go_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/carWash_search_view"
            android:layout_alignTop="@+id/carWash_search_view"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="-3dp"
            android:src="@mipmap/ic_store_mego" />
    </android.support.v7.widget.CardView>
</RelativeLayout>