<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw_back_handling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTextColor"
    android:orientation="vertical"
    tools:context="com.xi6666.order.activity.DrawBackHandlingActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        layout="@layout/layout_error_retry"/>

    <LinearLayout
        android:id="@+id/ll_draw_back_handling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tuikuai_bg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/tuikuaning_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="17dp"
                    android:paddingTop="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tuikuan_icon"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_drawback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您的退款申请，正等待卖家处理！"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_dbh_call_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="有疑问请拨打：400-9999-353"
                            android:textColor="@color/whiteTextColor"
                            android:textSize="14sp"/>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_drawback_apply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="申请"
                                android:textColor="@color/whiteTextColor"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_drawback_apply"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="center"
                                android:src="@drawable/done_point"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_drawback_handle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="处理"
                                android:textColor="@color/alphaWhiteTextColor"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_drawback_handle"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="center"
                                android:src="@drawable/undone_point"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_drawback_done"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="退款"
                                android:textColor="@color/alphaWhiteTextColor"
                                android:textSize="16sp"/>

                            <ImageView
                                android:id="@+id/iv_drawback_done"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="10dp"
                                android:scaleType="center"
                                android:src="@drawable/undone_point"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/left_line"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginBottom="3.5dp"
                            android:layout_marginLeft="60dp"
                            android:layout_weight="2"
                            android:background="@color/alphaWhiteTextColor"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"/>

                        <View
                            android:id="@+id/line_right"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginBottom="3.5dp"
                            android:layout_marginRight="60dp"
                            android:layout_weight="2"
                            android:background="@color/alphaWhiteTextColor"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款金额："
                android:textColor="#121212"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_drawback_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="¥288.00"
                android:textColor="#929292"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请服务："
                android:textColor="#121212"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="退款"
                android:textColor="#929292"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:textColor="#121212"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="微信"
                android:textColor="#929292"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请原因："
                android:textColor="#121212"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_drawback_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="拍错了"
                android:textColor="#929292"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说        明："
                android:textColor="#121212"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_drawback_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="老子就是不想买了，退钱老子就是不想买了，退钱老子就是不想买了，退钱老子就是不想买了，退钱"
                android:textColor="#929292"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
