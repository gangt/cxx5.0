<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divColor"
                android:orientation="vertical">


    <RelativeLayout
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/txt_recharge_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="七个月加油套餐"
            android:textColor="@color/txtMineOrderDefault"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_recharge_tab_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/txt_recharge_tab_title"
            android:text="剩余金额"
            android:textColor="@color/txxtSettingSingout"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_recharge_tab_arrow"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            />

        <TextView
            android:id="@+id/tv_recharge_tab_using"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_recharge_tab_arrow"
            android:text="使用中"
            android:textColor="@color/orange"
            android:textSize="13sp"/>


    </RelativeLayout>
</RelativeLayout>