<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:src="@mipmap/ic_ask_blue" />


    <!--  问题 -->
    <TextView
        android:id="@+id/item_answer_ques_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_black"
        android:textSize="13sp" />


    <!-- 图片-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_answer_image_rv"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content" />

    <!-- 电话  时间  点赞 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <!-- 电话 -->
        <TextView
            android:id="@+id/item_answer_tel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:text="134****2763"
            android:textColor="#929292"
            android:textSize="12sp" />


        <!-- 点赞 -->
        <CheckBox
            android:id="@+id/item_answer_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_green"
            android:drawableLeft="@drawable/ic_fabulous"
            android:button="@null" />


        <!-- 时间 -->
        <TextView
            android:id="@+id/item_answer_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_answer_ck"
            android:gravity="center_vertical"
            android:text="2016-11-09 17:36" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />


    <!-- 回复 -->
    <TextView
        android:id="@+id/item_anwser_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="10dp"
        android:text="技师回复：伤痛，对已经崩溃了的我来说又算什么？世界给的什么样的伤痛就怎么样还回去。" />


</LinearLayout>