<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/whiteTextColor"
              android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question"/>

            <TextView
                android:id="@+id/item_tv_time_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016-11-8 18:32"
                android:textColor="@color/light_gray_text"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_tv_content_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="谁写的文案，辣鸡，死辣鸡谁写的文案，辣鸡，死辣鸡谁写的文案，辣鸡，死辣鸡"
            android:textColor="@color/black_text"
            android:textSize="18sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nine_img_recyclerView_question"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/whiteTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>

    <TextView
        android:id="@+id/item_tv_jishi_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_gray"
        android:textSize="16sp"
        android:text=""/>

    <LinearLayout
        android:id="@+id/item_ll_jishi_details"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:background="#f2f5f2">

        <ImageView
            android:id="@+id/item_iv_store_img_question"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_data_empty"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/item_tv_store_name_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="防守反击了撒街坊邻居撒了房间里撒解放路"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/black_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_jishi_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/light_gray_text"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>