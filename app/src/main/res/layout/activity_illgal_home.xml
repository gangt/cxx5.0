<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xi6666.illegal.Activity.IllegalHomeAct">

    <include
        layout="@layout/base_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.xi6666.view.EmptyLayout
            android:id="@+id/el_illegalhome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="44dp">

            <com.xi6666.view.superrecyclerview.XRecyclerView
                android:id="@+id/xrc_illegalhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.xi6666.view.EmptyLayout>

        <TextView
            android:id="@+id/txt_illegalhome_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无查询记录"
            android:textColor="@color/addOillight"
            android:textSize="15sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/btn_illegalhome"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@color/themeColor"
            android:gravity="center"
            android:text="添加查询"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>


    </RelativeLayout>


</LinearLayout>
