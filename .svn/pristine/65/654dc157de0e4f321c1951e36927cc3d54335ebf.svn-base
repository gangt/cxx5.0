<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_commit_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dce0df"
    android:orientation="vertical"
    tools:context="com.xi6666.illegal.Activity.CommitSuccessActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@color/whiteTextColor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pay_success"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textColor="#313131"
            android:layout_marginTop="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#929292"
            android:text="提交成功!客服会尽快与您联系,请保持电话畅通,如有疑问,"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#929292"
            android:text="请咨询客服电话:400-9999-353"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_see_use_record"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/go_pingjia_bg"
        android:text="查看记录"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/themeColor"
        android:textSize="16sp"/>
</LinearLayout>
