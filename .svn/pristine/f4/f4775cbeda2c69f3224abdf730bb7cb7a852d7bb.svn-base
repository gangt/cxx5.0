<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_oil_ll"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:orientation="vertical">

    <!-- 油卡图片 -->
    <ImageView
        android:id="@+id/item_oil_card_iv"
        android:layout_width="47dp"
        android:layout_height="53dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="17dp"/>


    <!-- 油卡名字 -->
    <TextView
        android:id="@+id/item_oil_card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/item_oil_card_number"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@id/item_oil_card_iv"
        android:text="中国石化"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <!-- 持卡人名字 -->
    <TextView
        android:id="@+id/item_oil_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/item_oil_card_type"
        android:text="持卡人:"
        android:textColor="@color/white"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/item_oil_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_oil_card_name"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_oil_card_iv"
        android:text="1111"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"/>


    <RadioButton
        android:id="@+id/item_oil_card_rb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/ic_oil_card_select"
        android:button="@null"/>

    <TextView
        android:id="@+id/txt_item_oil_card_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_oil_card_rb"
        android:text="设为默认油卡"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_item_oil_card_arrival"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/bg_item_oil_card_item_btn"
        android:text="到账记录"
        android:textColor="@color/themeColor"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_item_oil_card_recharge"
        android:layout_width="72dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/btn_item_oil_card_arrival"
        android:background="@drawable/bg_item_oil_card_item_btn"
        android:text="充值记录"
        android:textColor="@color/themeColor"
        android:textSize="12sp"/>
</RelativeLayout>