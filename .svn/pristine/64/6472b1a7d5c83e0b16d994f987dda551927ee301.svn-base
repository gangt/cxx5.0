<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/divColor"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_washcardinfo"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:layout_marginBottom="11dp"

            android:background="@drawable/bg_wash_card">

            <TextView
                android:id="@+id/txt_washcardinfo_cardnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="15dp"
                android:text="卡号"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/txt_washcardinfo_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="64dp"
                android:text="卡内余额"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_washcardinfo_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_washcardinfo_"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:text="111"
                android:textColor="@android:color/white"
                android:textSize="23sp"/>

            <TextView
                android:id="@+id/txt_washcardinfo_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_washcardinfo_balance"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="2016"

                android:textColor="@android:color/white"
                android:textSize="13sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_washcardinfo_experience"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@color/themeColor"
                android:text="立即到附近门店体验"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>
        </RelativeLayout>
    </LinearLayout>


    <com.xi6666.view.EmptyLayout
        android:id="@+id/el_washcardinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.xi6666.view.superrecyclerview.XRecyclerView
            android:id="@+id/xrec_washcardinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"/>

    </com.xi6666.view.EmptyLayout>


</LinearLayout>