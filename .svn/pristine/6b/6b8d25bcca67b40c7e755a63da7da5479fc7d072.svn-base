<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:star="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/whiteTextColor"
              android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的评分："
                android:textColor="@color/light_gray_text"
                android:textSize="14sp"/>

            <com.xi6666.evaluate.other.EvaluateBar
                android:id="@+id/item_evaluateBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                star:starCount="5"
                star:starSize="16dp"
                star:starDistance="5dp"
                star:touch="false"
                star:starEmpty="@drawable/star_unselected"
                star:starFill="@drawable/star_selected"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text1"/>

            <TextView
                android:id="@+id/item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2016-11-8 18:32"
                android:textSize="14sp"
                android:textColor="@color/light_gray_text"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_tv_content_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="谁写的文案，辣鸡，死辣鸡谁写的文案，辣鸡，死辣鸡谁写的文案，辣鸡，死辣鸡"
            android:textColor="@color/black_text"
            android:textSize="16sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nine_img_recyclerView"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/whiteTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/item_ll_goods_details"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:background="#f2f5f2">

        <ImageView
            android:id="@+id/item_iv_goods_img_evaluate"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_data_empty"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/item_tv_goods_name_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="防守反击了撒街坊邻居撒了房间里撒解放路"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@color/black_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_tv_goods_color_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/light_gray_text"/>

                <TextView
                    android:id="@+id/item_tv_goods_size_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/light_gray_text"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>