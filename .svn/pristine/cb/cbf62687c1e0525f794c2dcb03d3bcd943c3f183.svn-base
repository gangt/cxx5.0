<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lllegal_query_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xi6666.illegal.Activity.IllegalQueryListActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/layout_error_retry"/>

    <LinearLayout
        android:id="@+id/ll_query_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dce0df"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_no_query_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#b2b2b2"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:visibility="gone"
            android:text="暂无查询记录"/>

        <com.xi6666.view.superrecyclerview.XRecyclerView
            android:id="@+id/xrlv_query_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_add_query"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#14cc70"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加查询"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>

</RelativeLayout>
