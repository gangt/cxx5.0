<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@color/divColor">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_illage_cardbag_item"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_item_illagecardbag_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="24dp"
            android:drawableLeft="@drawable/ic_shape_item_illagehome"
            android:drawablePadding="7dp"
            android:text="粤"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/txt_item_illagecardbag_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:text="卡号"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/txt_item_illagecardbag_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="28dp"
            android:layout_marginTop="65dp"
            android:text="类型"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_item_illagecardbag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_illagecardbag_type"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="7dp"
            android:text="剩余次数"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/txt_item_illagecardbag_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_item_illagecardbag_count"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="7dp"
            android:text="到期日期"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_item_illagecardbag_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_marginRight="24dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/ic_illage_useing"/>

        <Button
            android:id="@+id/btn_item_illagecardbag_right"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/bg_province_tv_select"
            android:text="使用记录"
            android:textColor="@color/themeColor"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/btn_item_illagecardbag_left"
            android:layout_width="72dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@id/btn_item_illagecardbag_right"
            android:background="@drawable/bg_province_tv_select"
            android:text="使用记录"
            android:textColor="@color/themeColor"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>