<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_add_oil_pay_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xi6666.addoil.view.AddOilPayResultAct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <ImageView
            android:id="@+id/iv_payreuslt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_oil_pay_success"
            />

        <TextView
            android:id="@+id/txt_payreuslt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="支付成功"
            android:textColor="@color/addOilTitle"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/divColor">

        <TextView
            android:id="@+id/txt_payresult_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="13dp"
            android:text="*洗车卡金额和购物代金券均已放入你的账户,请通过“我的-卡券包”查看"
            android:textColor="@color/txtMineOrderDefault"
            android:textSize="12sp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_payresult_how"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp">

            <TextView
                android:id="@+id/txt_payresult_look"
                android:layout_width="87dp"
                android:layout_height="37dp"
                android:background="@drawable/bg_happybeans_green"
                android:gravity="center"
                android:text="继续逛逛"
                android:textColor="@color/themeColor"
                android:textSize="13sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txt_payresult_order"
                android:layout_width="87dp"
                android:layout_height="37dp"
                android:layout_toRightOf="@id/txt_payresult_look"
                android:background="@drawable/bg_happybeans_green"
                android:gravity="center"
                android:text="查看订单"
                android:textColor="@color/themeColor"
                android:textSize="13sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_payresult_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:text="请拨打故障服务电话 400-9999-353"
            android:textColor="@color/addOillight"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/btn_payresult_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/themeColor"
            android:text="去支付"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>
    </RelativeLayout>
</LinearLayout>
