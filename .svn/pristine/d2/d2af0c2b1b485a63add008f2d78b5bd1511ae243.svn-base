<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgHomeFunction"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/home_convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_home_banner_default"
            app:canLoop="true"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/bg_home_function">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_homehead_functionone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_image_default"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_homehead_functiontwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_image_default"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_homehead_functionthr"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_image_default"/>
            </LinearLayout>

            <GridView
                android:id="@+id/gv_homedead"
                android:layout_width="wrap_content"
                android:layout_height="243dp"
                android:layout_below="@id/ll"

                android:layout_marginTop="22dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="16dp"/>
        </RelativeLayout>

        <com.xi6666.view.MesureListView
            android:id="@+id/lv_homehead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="22dp"
            android:drawableLeft="@drawable/home_fire_goods"
            android:drawablePadding="7dp"
            android:text="热卖商品"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>